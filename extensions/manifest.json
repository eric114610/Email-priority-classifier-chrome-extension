{
  "manifest_version": 3,
  "name": "Email Priority Instant Classifier (EPIC)",
  "version": "1.1.0",
  "permissions": [
    "storage", "activeTab", "scripting", "tabs"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
